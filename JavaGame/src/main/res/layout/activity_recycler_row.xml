<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="3dp"
    android:background="@drawable/fondo"
    android:layout_margin="5dp"
    tools:context=".ui.recycler_row">


    <ImageView
        android:id="@+id/idPic"
        android:layout_width="115dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:background="#939393"
        app:srcCompat="@drawable/ic_game_demo" />

    <TextView
        android:id="@+id/idtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/idPic"
        android:textColor="#383838"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:text="Sonic - Saga All Star"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/idfavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/idPic"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/ic_star_border_black_24dp" />

    <TextView
        android:id="@+id/idDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idtitles"
        android:layout_toRightOf="@+id/idPic"
        android:textColor="#28282b"
        android:textSize="8sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:text="Un juego J2ME clasico lleno de aventuras" />


    <ImageButton
        android:id="@+id/idMoreDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/idDownload"
        android:background="@drawable/ic_info_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Detalles" />

    <ImageButton
        android:id="@+id/idDownload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_cloud_download_black_24dp"
        android:text="Descargar" />

    <TextView
        android:id="@+id/idTvDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/idtvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/idDownload"/>

    <TextView
        android:id="@+id/idtvFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/idPic"
        android:layout_marginLeft="2dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>